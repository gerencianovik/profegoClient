        <div class="row mt-3 px-4">
            <div class="col-12 col-md-8 mb-3">
                <div class="row p-2 m-1" style="background-color: #147582;">
                    <div class="col-12 col-md-4 my-auto">
                        <img class="img-fluid bg-white" {{#if photoClases}} src="/img/clase/{{photoClases}}" {{else}}
                            src="/img/icons/noImagen.png" {{/if}} alt="Imagen de la Clase">
                    </div>
                    <div class="col-12 col-md-8 mb-2">
                        <div class="col-12 col-md-6 mb-2 text-white">
                            <p class="fs-2 m-0 fw-bold">{{nameClases}}</p>
                            <p class="fs-5 m-0">{{tipoClases}}</p>
                        </div>
                        <div id="direccion" class="mb-2">
                            <div style="width: 100%; height: 220px;" id="map"></div>
                            <input type="text" name="ubicacion" id="ubicacion" value="{{ubicacionClase}}" readonly>
                        </div>
                        <p class="text-white fs-5 m-0"><input disabled type="checkbox" name="adaptacion" id="adaptacion"
                                value="on" {{#if neeClases}}checked{{/if}}> Adaptado para NEE</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4 mb-3 mt-1">
                <div class="position-relative" style="max-width: 100%; max-height: auto;">
                    <video id="videoPreview" class="w-100" style="height: 300px; object-fit: contain;"
                        src="/video/clases/{{videoClases}}" controls></video>
                </div>
            </div>
            <div class="col-12 col-md-6 mb-3">
                <div class="card p-4">
                    <div class="mb-3">
                        <h3 style="color: #145354;">Descripción</h3>
                        <p>{{descriptionClases}}</p>
                    </div>

                    <div class="row mb-3">
                        <h3 style="color: #145354;">Docentes</h3>
                        {{#each ../docenteLista}}
                        <div class="card col-12 col-md-5 mb-2" style="overflow: hidden; margin-right: 10px;">
                            <div class="row">
                                <div class="col-12 col-md-6" style="position: relative;">
                                    <img src="/img/user/{{photoTeacher}}" class="img-fluid" style="width: 100%;">
                                    <img src="/img/icons/aprobado.png" class="img-fluid"
                                        style="position: absolute; top: 10px; left: 20px; width: 25%;">
                                </div>
                                <div class="col-12 col-md-6 my-auto">
                                    <div>
                                        <p class="fs-4">{{completeNmeTeacher}}</p>
                                        <p class="fs-6">{{descriptionTeacher}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>

                    <div class="mb-3">
                        {{#each ../temario}}
                        <h3 style="color: #145354;">Temario educativo</h3>
                        <p>Objetivo: {{objetivesyllabusEducational}}</p>
                        <div id="moduloTotal">
                            <p>{{moduleCurrucularContentCourse}}Módulos</p>
                            |
                            <p>{{themesyllabusEducational}}Clases</p>
                            |
                            <p>{{timesyllabusEducational}}Duración total</p>

                        </div>
                        {{/each}}
                    </div>

