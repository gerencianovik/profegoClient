<link rel="stylesheet" href="/css/clases/add.css">
{{#each listaTeacher}}
<form action="/clases/add/{{idTeacher}}" method="post" enctype="multipart/form-data">
    {{/each}}
    <div id="contenedor">
        <div id="fondo">
            <img src="/img/icons/fondoLista.png">
        </div>
        <div id="tiutlo">{{#each MaximoCurso}}
            <p>Agregar Clase <input type="text" name="idClases" id="numero" value="{{Maximo}}"></p>{{/each}}
        </div>
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        <div id="central">
            <div id="imagens">
                <div id="cambioImagen">
                    <img src="/img/icons/noImagen.png" id="imagenPrevisualizacion" />
                </div>
                <input type="file" name="photoClases" id="seleccionArchivos" accept="image/*" />
                <button type="button" id="botonImagen">Imagen</button>
            </div>
            <div id="direccion">
                <div id="map"></div>
                <input id="pac-input" class="controls" type="text" placeholder="Buscar" />
                <input type="text" name="ubicacion" id="ubicacion">
            </div>
            <input type="checkbox" name="neeClass" id="check">
            <div id="nombre">
                <p>Nombre de la Clase:</p>
                <input type="text" name="nameClases" id="nameClases" required>
            </div>
        </div>
        <div id="videosS">
            <div id="cambioVideo">
                <video src="/video/clase/noVideo.mp4" controls></video>
            </div>
            <input type="file" name="videoClases" id="seleccionArchivos" accept="image/*" />
        </div>
        <div id="datosGenerales">
            <div id="descripcion">
                <p>Descripción de la Clase:</p>
                <textarea name="descriptionClases" id="descriptionClases" required></textarea>
            </div>
            <div id="seleccion">
                <p>Clase para:</p>
                <select name="tipoClases" id="tipoClases">
                    <option value="Individual">Individual</option>
                    <option value="Grupal">Grupal</option>
                </select>
            </div>
            <div id="edad">
                <p>Edad dirigida de la Clase</p>
                <div id="Edad">
                    <select name="rangeAgeTeacher" id="edadRango">
                        <option value="3-5 años">3-5 años</option>
                        <option value="5-7 años">5-7 años</option>
                        <option value="7-9 años">7-9 años</option>
                        <option value="9-12 años">9-12 años</option>
                        <option value="12-16 años">12-16 años</option>
                        <option value="16-18 años">16-18 años</option>
                        <option value="Universitarios">Universitarios</option>
                        <option value="Docentes">Docentes</option>
                    </select>
                    <div id="rangeAgeTeacher"></div>
                </div>
            </div>
            <div id="fechaInicio">
                <p>Fecha inicio:</p>
                <input type="text" name="dateClasesInit" id="dateCours" required>
            </div>
            <div id="fechaFin">
                <p>Fecha inicio:</p>
                <input type="text" name="dateClasesFin" id="dateCours" required>
            </div>
            <div id="costo">
                <p>Costo:</p>
                <input type="text" name="costClases" id="costClases" required>
            </div>
            <div id="cupos">
                <p>Cupos:</p>
                <input type="text" name="shareClases" id="shareClases">
            </div>
            <div id="Hora">
                <p>Tiempo de la Clase:</p>
                <input type="text" name="hourClases" id="hourClases">
            </div>
        </div>
        <div id="boton">
            <button type="submit">Guardar</button>
        </div>
    </div>
</form>

<script src="/js/preview.js"></script>
<script src="/js/botonImagen.js"></script>
<script src="/js/numero.js"></script>
<script src="/js/checket.js"></script>
<script src="/js/EdadSeleccion.js"></script>
<script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB_Q9PaOYlXpeqtj_0tHE19Zcoim25iSFg&callback=initAutocomplete&libraries=places&v=weekly"
    defer></script>
<script src="/js/mapa.js"></script>