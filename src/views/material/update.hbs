<link rel="stylesheet" href="/css/recours/add.css">
{{#each listaCurso}}
<form action="/material/updateCurso/{{idMaterial}}" method="post">
    <div class="bg-fondo pt-3">
        <div class="container">
            <div class="row">
                <div class="col-md-5 mx-auto mb-2">
                    <div class="card text-white text-center shadow"
                        style="background: linear-gradient(to bottom, #014f78, #167283);">
                        <div class="card-body">
                            <input type="hidden" name="_csrf" value="{{ ../csrfToken }}">
                            <input type="hidden" name="courIdCours" value="{{courIdCours}}">
                            <h5 class="card-title fs-3 mb-3">Actualizar Material N° <input type="text" name="idMaterial"
                                    id="numero" required value="{{idMaterial}}">
                            </h5>
                            <div class="mb-4">
                                <label class="form-label fs-5 m-0">Nombre del Material</label>
                                <input type="text" class="form-control border-warning border-2" name="nameMaterial"
                                    id="nameMaterial" required value="{{nameMaterial}}">
                            </div>

                            <div class="mb-4">
                                <label class="form-label fs-5 m-0">Descripcion del Material</label>
                                <textarea rows="3" type="text" class="form-control border-warning border-2"
                                    name="descriptionMaterial" id="descriptionMaterial"
                                    required>{{descriptionMaterial}}</textarea>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fs-5 m-0">Cantidad del Material</label>
                                <input type="text" class="form-control border-warning border-2"
                                    name="quantyMaterailClass" id="quantyMaterailClass" required
                                    value="{{quantyMaterailClass}}">
                            </div>

                            <div class="mb-4">
                                <label class="form-label fs-5 m-0">Precio del Material</label>
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control border-warning border-2" name="valueMaterial"
                                        id="valueMaterial" required value="{{valueMaterial}}">
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fs-5 m-0">Estado</label>
                                <div class="input-group">
                                    <input type="text" class="form-control border-warning border-2" name="stateMaterial"
                                        id="idestado" value="{{stateMaterial}}" readonly>

                                    <span class="input-group-text p-0">
                                        <button id="activarBtn" style="display: none;" type="button"
                                            class="btn btn-primary fw-bold">
                                            Activar</button>
                                        <button id="desactivarBtn" style="display: none;" type="button"
                                            class="btn btn-secondary fw-bold">
                                            Desactivar</button>
                                    </span>
                                </div>
                            </div>

                            <button class="py-1 btn bg-info border-5" type="submit"><span
                                    class="px-4 fw-bold">Actualizar</span></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
{{/each}}

