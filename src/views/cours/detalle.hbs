                                        <img src="/img/icons/aprobado.png" class="docente-badge">
                                    </div>
                                    <div class="docente-info">
                                        <h3 class="h5 mb-2">{{completeNmeTeacher}}</h3>
                                        <p class="text-muted mb-3">{{descriptionTeacher}}</p>
                                        <a href="/teacher/lista/{{idTeacher}}" class="btn btn-sm btn-outline-primary">Ver perfil</a>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>


                    </div>
                </div>
            </div>

            <!-- Sección de acciones rápidas -->
            <div class="col-12 col-lg-4 curso-animado delay-2">
                <div class="seccion-contenido h-100">
                    <h2 class="titulo-seccion">Acciones Rápidas</h2>
