                            <div class="d-flex align-items-start bg-light p-3 rounded h-100">
                                <div class="me-3">
                                    <img style="width: 50px; background-color:var(--accent-light);"
                                        class="img-fluid rounded-3" src="/img/icons/Recursos.png">
                                </div>
                                <div>
                                    <h5 class="mb-2">Recursos</h5>
                                    {{#each ../recursos}}
                                    <p class="mb-1">{{nameRecours}}</p>
                                    {{/each}}
                                </div>
                            </div>
                        </div>

                        <!-- Materiales -->
                        <div class="col-12 col-md-6">
                            <div class="d-flex align-items-start bg-light p-3 rounded h-100">
                                <div class="me-3">
                                    <img style="width: 50px; background-color:var(--accent-light);"
                                        class="img-fluid rounded-3" src="/img/icons/materiales.png">
                                </div>
                                <div>
                                    <h5 class="mb-2">Materiales</h5>
                                    {{#each ../materiales}}
