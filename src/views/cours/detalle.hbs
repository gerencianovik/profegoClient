                            <h1 class="display-5 fw-bold mb-3">{{nameCours}}</h1>
                            <p class="fs-4 mb-4">{{nameCoursClassType}}</p>

                            <div class="d-flex flex-wrap gap-3 mb-4">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calendar-alt me-2 fs-5"></i>
                                    <span>{{dateCoursInit}} - {{dateCoursFin}}</span>
                                    <input type="hidden" id="fechaInicio" value="{{dateCoursInit}}" hidden>
                                    <input type="hidden" id="fechaFin" value="{{dateCoursFin}}" hidden>
                                </div>

                                <div class="d-flex align-items-center">
                                    <i class="fas fa-clock me-2 fs-5"></i>
                                    <span>{{hourCours}}</span>
                                </div>

                                <div class="d-flex align-items-center">
                                    <i class="fas fa-users me-2 fs-5"></i>
                                    <span>{{shareCours}} cupos</span>
                                </div>

                                <div class="d-flex align-items-center">
                                    <i class="fas fa-dollar-sign me-2 fs-5"></i>
                                    <span class="fw-bold">${{costCours}}</span>
                                </div>
                            </div>

                            <div class="form-check form-switch ps-0">
                                <input class="form-check-input ms-0 me-2" type="checkbox" id="adactacion" {{#if
                                    neeCours}}checked{{/if}} disabled>
                                <label class="form-check-label" for="adactacion">Adaptado para NEE</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

