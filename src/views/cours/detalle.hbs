                <div class="row g-4">
                    <!-- Imagen del curso -->
                    <div class="col-12 col-md-6 curso-animado delay-1">
                        <div class="curso-imagen-container">
                            <img class="curso-imagen" {{#if photoCours}} src="/img/cours/{{photoCours}}" {{else}}
                                src="/img/icons/noImagen.png" {{/if}} alt="Imagen del Curso">
                            <span class="status-badge {{#if stateCours}}active{{else}}inactive{{/if}}">
                                {{#if stateCours}}Activo{{else}}Inactivo{{/if}}
                            </span>
                        </div>
                    </div>

                    <!-- Video del curso -->
                    <div class="col-12 col-md-6 curso-animado delay-2">
                        <div class="video-container h-100">
                            <video id="videoPreview" class="class-video" src="/video/cours/{{videoCours}}" controls
                                poster="/img/cours/{{photoCours}}"></video>
                        </div>
                    </div>

                    <!-- Descripción del curso -->
                    <div class="col-12 curso-animado delay-3">
                        <div class="seccion-contenido">
                            <h2 class="titulo-seccion">Nuestros Docentes</h2>
                            <div class="docentes-grid">
                                {{#each ../docenteLista}}
