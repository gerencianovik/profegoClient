                            <div class="d-flex align-items-start bg-light p-3 rounded h-100">
                                <div class="me-3">
                                    <img style="width: 50px;" class="img-fluid rounded-3" src="/img/icons/Tareas.png">
                                </div>
                                <div>
                                    <h5 class="mb-2">Tareas</h5>
                                    {{#each ../tareas}}
                                    <a href="/tareas/detailCurso/{{idTask}}"
                                        class="d-block mb-1 text-decoration-none">{{nameTask}}</a>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Calendario -->
            <div class="col-12 curso-animado delay-3">
                <div class="calendario-container">
                    <h2 class="titulo-seccion">Disponibilidad</h2>
                    <div class="leyenda-calendario">
                        <div class="leyenda-item">
                            <span class="leyenda-color" style="background-color: #008000;"></span>
                            <span>Libre</span>
                        </div>
                        <div class="leyenda-item">
                            <span class="leyenda-color" style="background-color: #f39325;"></span>
                            <span>Ocupado</span>
                        </div>
                        <div class="leyenda-item">
                            <span class="leyenda-color" style="background-color: #ff0000;"></span>
                            <span>No disponible</span>
                        </div>
                    </div>
                    <div id="calendar"></div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

