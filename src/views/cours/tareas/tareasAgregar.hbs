<link rel="stylesheet" href="/css/recours/add.css">
{{#each listaCurso}}
<form action="/tareas/curso/{{idCours}}" method="post">
    {{/each}}
    <div class="bg-fondo pt-3">
        <div class="container">
            <div class="row">
                <div class="col-md-5 mx-auto">
                    {{#each MaximoCurso}}
                    <h1 class="text-center fw-bold mb-3" style="color: #f39325;">Agregar Tarea<input type="text"
                            name="idTask" id="numero" value="{{Maximo}}"></h1>
                    {{/each}}
                    <div class="card text-start fs-5 shadow border-0">
                        <div class="card-body">
                            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

                            <div class="mb-4">
                                <label class="form-label m-0" style="color: #2f5f6f;">Nombre</label>
                                <input type="text" class="form-control shadow" name="nameTask" id="nameTask" required>
                            </div>

                            <div class="mb-4">
                                <label class="form-label m-0" style="color: #2f5f6f;">Descripcion</label>
                                <textarea rows="3" type="text" class="form-control shadow" name="descriptionTask"
                                    id="descriptionTask" required></textarea>
                            </div>

                            <div class="mb-4">
                                <label class="form-label m-0" style="color: #2f5f6f;">Fecha m√°xima de entrega</label>
                                <input type="date" class="form-control shadow" name="fechaEntrega"
                                    id="fechaEntrega" required>
                            </div>

                            <div class="text-center text-white">
                                <button class="py-2" style="background-color: #f39325; border-radius:10px;"
                                    type="submit"><span class="px-4 mx-3">Guardar</span></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<script src="/js/numero.js"></script>