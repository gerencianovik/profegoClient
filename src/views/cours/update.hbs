<link rel="stylesheet" href="">
<form action="/cours/update/{{idPage}}" method="post" enctype="multipart/form-data">
    <div id="tiutlo">{{#each lista}}
        <p>Agregar Clase <input type="text" name="idClases" id="idClases"></p>{{/each}}
    </div>
    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
    <div id="imagen">
        <div id="cambioImagen">
            <img src="/img/icons/{{photoCours}}" id="imagenPrevisualizacion" />
        </div>
        <input type="file" name="photoCours" id="seleccionArchivos" accept="image/*" />
    </div>
    <div id="imagen">
        <div id="cambioVideo">
            <video src="/video/clase/{{videoCours}}" controls></video>
        </div>
        <input type="file" name="videoCours" id="seleccionArchivos" accept="image/*" />
    </div>
    <div id="nombre">
        <p>Nombre de la Clase:</p>
        <input type="text" name="nameCours" id="nameCours" required>
    </div>
    <div id="descripcion">
        <p>Descripci√≥n de la Clase:</p>
        <textarea name="descriptionCours" id="descriptionCours" required></textarea>
    </div>
    <div id="fecha">
        <p>Fecha Inicio Curso:</p>
        <input type="text" name="dateCoursInit" id="dateCours" required>
    </div>
    <div id="fechaFinal">
        <p>Fecha de Fin del Curso:</p>
        <input type="text" name="dateCoursfin" id="dateCours" required>
    </div>
    <div id="costo">
        <p>Costo:</p>
        <input type="text" name="costCours" id="costCours" required>
    </div>
    <div id="cupos">
        <p>Cupos:</p>
        <input type="text" name="shareCours" id="shareCours">
    </div>
    <div id="Hora">
        <p>Tiempo de la Clase:</p>
        <input type="text" name="hourCours" id="hourCours">
    </div>
    <div id="estado">
            <p>Estado:</p>
            <div id="Activar">
                <input type="text" name="stateCours" id="stateCours" readonly>
                <button type="button">Activar</button>
            </div>
            <div id="desActivar">
                <button type="button">Desabilitar</button>
                <input type="text" name="stateCours" id="stateCours" readonly>
            </div>
        </div>
    <div id="boton">
        <button type="submit">Actualizar</button>
    </div>
</form>