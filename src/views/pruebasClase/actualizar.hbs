<link rel="stylesheet" href="/css/assessments/add.css">
{{#each prueba}}
<form action="/pruebas/update/{{idAssessment}}" method="post">
    <input type="hidden" name="_csrf" value="{{ ../csrfToken }}">
    <div class="contenedor">
        <div id="titulo">
            <p>Evaluación Actualizar</p>
        </div>
        <div id="nombre">
            <p>Nombre de la evaluación:</p>
            <textarea name="nameAssessment" id="nameAssessment" required>{{nameAssessment}}</textarea>
        </div>
        <div id="descripcion">
            <p>Descripción de la Evaluación:</p>
            <textarea name="descriptionAssessment" id="descriptionAssessment"
                required>{{descriptionAssessment}}</textarea>
        </div>
        <div id="tiempo">
            <p>Tiempo de evaluación:</p>
            <input type="time" name="timeAssessment" id="timeAssessment" required value="{{timeAssessment}}">
        </div>
        <div id="fecha">
            <p>Fecha de evaluación:</p>
            <input type="date" name="dateAssessment" id="dateAssessment" required value="{{dateAssessment}}">
        </div>
        <div id="calificacion">
            <p>Calificación:</p>
            <input type="text" name="qualification" id="qualification" required value="{{qualification}}">
        </div>
        <div id="boton">
            <button type="submit">Actualizar</button>
        </div>
    </div>
</form>
{{/each}}