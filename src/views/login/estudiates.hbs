<link rel="stylesheet" href="/css/login/login.css">

<div class="bg-login d-flex justify-content-center align-items-center">
    <div class="card shadow mx-1" style="width: 32rem;">
        <form class="card-body p-0" action="/loginStudents" method="post">
            <div class="text-center mt-2">
                <h1 style="color: #f39323;">Iniciar sesión</h1>
                <h4 style="color: #23615b;">¡Hola de nuevo a ProfeGo!</h4>
            </div>
            <div class="container-sm col-12 col-md-10 mt-4">
                <div class="mb-3">
                    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                    <label for="exampleInputEmail1" class="form-label m-0">
                        <h5 class="fw-bold" style="color: #23615b;">Cédula</h5>
                    </label>
                    <div class="input-group input-group-lg m-0">
                        <input type="text" class="form-control border-3" style="border-color: #f39325;"
                            aria-describedby="inputGroup-sizing-lg" name="username" id="cedula" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label m-0">
                        <h5 class="fw-bold" style="color: #23615b;">Contraseña</h5>
                    </label>
                    <div class="input-group input-group-lg m-0">
                        <input type="password" class="form-control border-3" style="border-color: #f39325;"
                            aria-describedby="inputGroup-sizing-lg" name="password" id="contrasena" required>
                        <span class="input-group-text p-0 border-start-0 border-3" style="border-color: #f39325;">
                            <div id="botonVer">
                                <button type="button" id="ver" class="btn btn-link p-0 m-0">
                                    <img class="" src="/img/icons/login/ojoCerrado.png" alt="Ojo Cerrado"
                                        style="width: 40px; height:40px;">
                                </button>
                                <button type="button" id="nover" class="btn btn-link p-0 m-0">
                                    <img class="" src="/img/icons/login/ojoAbierto.png" alt="Ojo Abierto"
                                        style="width: 40px; height:40px;">
                                </button>
                            </div>
                        </span>
                    </div>
                </div>
                <div class="text-end fw-bold">
                    <a href="">
                        <p>¿Olvidaste tu contraseña?</p>
                    </a>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-lg text-white px-5 py-3 fs-4 fw-bold shadow"
                        style="background-color: #f39323;">Ingresar</button>
                    <p class="mt-3 fw-bold" style="color:#23615b;">¿No tienes una cuenta? <a style="color:#f39323;"
                            href="/RegisterStudents">Regístrate aquí</a></p>
                </div>
            </div>
            <div class="rounded-bottom" style="background-color: #004d77; height: 50px;"></div>
        </form>
    </div>
</div>

