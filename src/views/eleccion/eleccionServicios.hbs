<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="/css/eleccion/servicios.css">

<!-- Imagen de cabecera (full width) -->
<div class="header-image-container">
    <img src="/img/fondo/teacherinicio.png" alt="Profesor enseñando" class="img-fluid w-100 header-image">
</div>

<!-- Contenido principal con márgenes -->
<div class="main-content-container">
    <!-- Sección de Bienvenida -->
    <div class="welcome-section p-4 mb-5">
        <div class="row align-items-center">
            <div class="col-md-7">
                <h1 class="welcome-title mb-3 animate__animated animate__fadeInDown">¡Bienvenido {{descifrar
                    user.completeNmeTeacher}}!</h1>
                <p class="welcome-text animate__animated animate__fadeIn animate__delay-1s">
                    Elige entre servicios que puedes crear o los existentes.<br>
                    ¡Tu enseñanza, tu elección!
                </p>
            </div>
            <div class="col-md-5 text-center animate__animated animate__fadeIn">
                <img src="/img/fondo/guntosEstudiantes.png" alt="Estudiantes" class="welcome-image">
            </div>
        </div>
    </div>

    <!-- Sección de Servicios -->
    <div class="row mb-5">
        <!-- Columna de Clases -->
        <div class="col-lg-6 mb-4 mb-md-0">
            <div class="text-center mb-4">
                <a href="/clases/list/{{user.idTeacher}}"
                    class="btn btn-service-classes animate__animated animate__fadeInLeft">
                    <div class="service-btn-content">
                        <i class="fas fa-chalkboard-teacher service-btn-icon"></i>
                        <h3 class="service-btn-title">Clases</h3>
                    </div>
                </a>
            </div>

            <h3 class="section-title animate__animated animate__fadeIn">¿Qué encontrarás?</h3>

            <div class="service-card animate__animated animate__fadeIn animate__delay-1s">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="service-icon me-3">
                            <img src="/img/icons/clases.png" alt="Clases particulares">
                        </div>
                        <div>
                            <h5 class="service-title">Clases particulares</h5>
                            <p class="text-muted mb-0">Enseñanza personalizada a un solo estudiante</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="service-card animate__animated animate__fadeIn animate__delay-1s">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="service-icon me-3">
                            <img src="/img/icons/claseGrupal.png" alt="Clases grupales">
                        </div>
                        <div>
                            <h5 class="service-title">Clases grupales</h5>
                            <p class="text-muted mb-0">Enseñanza para grupos pequeños</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="service-card animate__animated animate__fadeIn animate__delay-1s">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="service-icon me-3">
                            <img src="/img/icons/claseParticular.png" alt="Coaching individual">
                        </div>
                        <div>
                            <h5 class="service-title">Coaching individual para docentes</h5>
                            <p class="text-muted mb-0">Desarrollo profesional para educadores</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Columna de Cursos -->
        <div class="col-lg-6">
            <div class="text-center mb-4">
                <a href="/cours/list/{{user.idTeacher}}"
                    class="btn btn-service-courses animate__animated animate__fadeInRight">
                    <div class="service-btn-content">
                        <i class="fas fa-book-open service-btn-icon"></i>
                        <h3 class="service-btn-title">Cursos</h3>
                    </div>
                </a>
            </div>

            <h3 class="section-title animate__animated animate__fadeIn">¿Qué encontrarás?</h3>

            <div class="service-card animate__animated animate__fadeIn animate__delay-1s">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="service-icon me-3">
                            <img src="/img/icons/Cursos.png" alt="Cursos especializados">
                        </div>
                        <div>
                            <h5 class="service-title">Cursos especializados</h5>
                            <p class="text-muted mb-0">Programas estructurados de aprendizaje</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="service-card animate__animated animate__fadeIn animate__delay-1s">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="service-icon me-3">
                            <img src="/img/icons/Couching.png" alt="Coaching grupal">
                        </div>
                        <div>
                            <h5 class="service-title">Coaching grupal para docentes</h5>
                            <p class="text-muted mb-0">Desarrollo profesional en grupo</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Catálogo de Servicios Existentes -->
    <div class="featured-courses animate__animated animate__fadeInUp animate__delay-2s">
        <h3 class="section-title">Catálogo de servicios existentes</h3>
        <p class="mb-4">¿Te gustaría impartir alguno de los servicios creados por el equipo de TEACH? Explora y
            selecciona los mejores programas para ti o crea los tuyos propios.</p>

        <div class="row">
            {{#each listaCursos}}
            <div class="col-md-6">
                <div class="course-card">
                    <img src="/img/fondo/course-default.jpg" class="img-fluid course-img" alt="{{nameCours}}">
                    <div class="p-3">
                        <h5 class="course-title">{{nameCours}}</h5>
                        <p class="course-author mb-2">Por {{teacherName}}</p>
                        <span class="course-modalidad mb-3">
                            <i
                                class="fas fa-{{#if (eq nameCoursClassType 'Presencial')}}map-marker-alt{{else}}laptop{{/if}} me-1"></i>
                            {{nameCoursClassType}}
                        </span>
                        <p class="mb-3">{{descriptionCours}}</p>
                        <div class="d-flex justify-content-between">
                            <a href="/course/detail/{{id}}" class="btn action-btn detail">
                                <i class="fas fa-info-circle me-1"></i> Ver detalle
                            </a>
                            <a href="/course/teach/{{id}}" class="btn action-btn teach">
                                <i class="fas fa-chalkboard-teacher me-1"></i> Impartir
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Animaciones adicionales al desplazarse
    document.addEventListener('DOMContentLoaded', function () {
        const animatedElements = document.querySelectorAll('.animate__animated');

        animatedElements.forEach(element => {
            element.style.opacity = '0';
        });

        setTimeout(() => {
            animatedElements.forEach(element => {
                element.style.opacity = '1';
            });
        }, 100);
    });
</script>