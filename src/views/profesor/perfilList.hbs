<link rel="stylesheet" href="/css/teacher/lista.css">

<div class="bg-lista">
    <div class="container-sm my-4">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-12 col-md-11">
                {{#each listaTeacher}}
                <form action="/teacher/lista/{{idTeacher}}" method="get">
                    <div class="card d-flex justify-content-center align-items-center"
                        style="border-bottom-left-radius: 0;border-bottom-right-radius: 0;">
                        <div class="card-body col-md-10">
                            <div class="row">
                                <div class="col-12 my-4 text-center">
                                    <h1>Mi Perfil</h1>
                                    <div class="image-container">
                                        <img class="img-fluid imgReg" src="/img/user/{{photoTeacher}}"
                                            id="imagenPrevisualizacion">
                                    </div>
                                    <h3 class="nombre">Mi nombre es: {{completeNmeTeacher}}</h3>
                                </div>

                                <div class="col-12 mb-3">
                                    <div id="direccion">
                                        <div id="map"></div>
                                    </div>
                                    <input type="text" name="addressTeacher" id="ubicacion" placeholder="Dirección"
                                        value="{{addressTeacher}}" readonly>
                                </div>

                                <div class="col-12 col-md-6 mb-3 text-center">
                                    <label class="form-label m-0">
                                        <h5 class="fw-bold" style="color: #23615b;">Especialidad</h5>
                                    </label>
                                    {{#each ../listaChouch}}
                                    <div class="card border-3 col-12 col-md-6 shadow fst-italic"
                                        style="border-color: #f39325;">
                                        <div class="card-body text-center">
                                            <p class="fs-3 m-0">{{stateTeachCouch}}</p>
                                        </div>
                                    </div>
                                    {{/each}}
                                </div>

                                <div class="col-12 col-md-6 mb-3 text-center d-flex justify-content-center">
                                    <div>
                                        <label class="form-label m-0">
                                            <h5 class="fw-bold" style="color: #23615b;">Fecha Nacimineto</h5>
                                        </label>
                                        <p>{{ageTeacher}}</p>
                                    </div>
                                </div>

                                <div class="col-12 mb-3 text-center">
                                    <label class="form-label m-0">
                                        <h5 class="fw-bold" style="color: #23615b;">Titulos</h5>
                                    </label>
                                    <div class="flex">
                                        {{#each ../listaMaterias}}
                                        <div class="card border-3 col-12 col-md-6 shadow fst-italic"
                                            style="border-color: #f39325;">
                                            <div class="card-body text-center">
                                                <p class="fs-3 m-0">{{nameSpecialType}}</p>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>

                                <div class="col-12 mb-3 text-center">
                                    <label class="form-label m-0">
                                        <h5 class="fw-bold" style="color: #23615b;">Documentación</h5>
                                    </label>
                                    <div class="row">
                                        <div class="col-12 col-md-4 card border-0">
                                            <iframe id="documentoTituloPrevisualizacion"
                                                src="/archivos/teacher/{{endorsementCertificateTeacher}}"></iframe>
                                        </div>
                                        <div class="col-12 col-md-4 card border-0">
                                            <iframe id="documentoTituloPrevisualizacion"
                                                src="/archivos/teacher/{{pageVitalTeacher}}"></iframe>
                                        </div>
                                        <div class="col-12 col-md-4 card border-0">
                                            <iframe id="documentoTituloPrevisualizacion"
                                                src="/archivos/teacher/{{criminalRecordTeacher}}"></iframe>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 mb-3 text-center">
                                    <label class="form-label m-0">
                                        <h5 class="fw-bold" style="color: #23615b;">Materias</h5>
                                    </label>
                                    <div class="flex">
                                        {{#each ../listaDetalle}}
                                        <div class="card border-3 col-12 col-md-6 shadow fst-italic"
                                            style="border-color: #f39325;">
                                            <div class="card-body text-center">
                                                <p class="fs-3 m-0">{{subjetTeacher}}</p>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>

                                <div class="col-12 mb-3  text-center d-flex justify-content-center">
                                    <div>
                                        <label class="form-label m-0">
                                            <h5 class="fw-bold" style="color: #23615b;">Edad</h5>
                                        </label>
                                        {{#each ../listaDetalle}}
                                        <div class="card border-3 col-12 col-md-3 shadow fst-italic"
                                            style="border-color: #f39325;">
                                            <div class="card-body text-center">
                                                <p class="fs-3 m-0">{{rangeAgeTeacher}}</p>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>

                                <div class="col-12 col-md-6 mb-3 text-center d-flex justify-content-center">
                                    <div>
                                        <label class="form-label m-0">
                                            <h5 class="fw-bold" style="color: #23615b;">Cedula</h5>
                                        </label>
                                        <p>{{identificationCardTeacher}}</p>
                                    </div>
                                </div>

                                <div class="col-12 col-md-6 mb-3 text-center d-flex justify-content-center">
                                    <div>
                                        <label class="form-label m-0">
                                            <h5 class="fw-bold" style="color: #23615b;">Celular</h5>
                                        </label>
                                        <p>{{phoneTeacher}}</p>
                                    </div>
                                </div>

                                <div class="col-12 col-md-6 mb-3 text-center d-flex justify-content-center">
                                    <div>
                                        <label class="form-label m-0">
                                            <h5 class="fw-bold" style="color: #23615b;">Correos</h5>
                                        </label>
                                        <p>{{emailTeacher}}</p>
                                    </div>
                                </div>

                                <div class="col-12 col-md-6 mb-3 text-center d-flex justify-content-center">
                                    <div>
                                        <label class="form-label m-0">
                                            <h5 class="fw-bold" style="color: #23615b;">Estado</h5>
                                        </label>
                                        <p>{{stateTeacher}}</p>
                                    </div>
                                </div>

                                <div class="col-12 mb-3 text-center d-flex justify-content-center">
                                    <div>
                                        <label class="form-label m-0">
                                            <h5 class="fw-bold" style="color: #23615b;">Description</h5>
                                        </label>
                                        <p>{{descriptionTeacher}}</p>
                                    </div>
                                </div>

                                <div class="text-center my-3">
                                    <a href="/teacher/update/{{idTeacher}}" style="background-color: #0b4e71;"
                                        class="btn btn-lg text-white" type="button">Actualizar Sus
                                        Datos</butaton>
                                </div>
                            </div>
                        </div>
                </form>
                {{/each}}
                <div class="rounded-bottom" style="background-color: #f39323; height: 50px;"></div>
            </div>
        </div>
    </div>
</div>
</div>

