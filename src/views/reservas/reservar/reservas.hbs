<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Factura y Pago</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            margin-top: 100px;
        }

        .form-container {
            max-width: 1000px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            background-color: #f9f9f9;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }

        /* Estilo del modal */
        .modal-custom {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .modal-content-custom {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            max-width: 500px;
            width: 100%;
        }

        .modal-header-custom {
            background-color: #007bff;
            color: white;
            padding: 10px;
            border-radius: 10px 10px 0 0;
        }

        .close-btn {
            float: right;
            cursor: pointer;
            color: white;
            font-size: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="form-container">
            <div class="row mb-4">
                <!-- Datos del negocio (lado izquierdo) -->
                <div class="col-md-6">
                    <h5>Datos del Negocio</h5>
                    {{#each pagina}}
                    <p><strong>Nombre:</strong>{{namePage}}</p>
                    <p><strong>Ruc:</strong> {{rucPage}}</p>
                    <p><strong>Teléfono:</strong> {{cellPhonePage}}</p>
                    <p><strong>Correo:</strong>{{emailPage}}</p>
                    {{/each}}
                </div>
                <!-- Datos del cliente (lado derecho) -->
                <div class="col-md-6 text-end">
                    <h5>Datos del Cliente</h5>
                    {{#each estudiante}}
                    <p><strong>Nombre Completo:</strong> {{completeNameEstudent}}</p>
                    <p><strong>Correo Electrónico:</strong> {{emailEstudent}}</p>
                    <p><strong>Teléfono:</strong> {{celularEstudent}}</p>
                    {{/each}}
                </div>
            </div>

            <!-- Detalles de la factura -->
            <h5>Detalles de la Factura</h5>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Descripción</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        {{#each curso}}
                        <td>{{nameCours}}</td>
                        <td>1</td>
                        <td>{{costCours}}</td>
                        <td>{{costCours}}</td>
                        {{/each}}
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3" class="text-end">Total a Pagar</th>
                        <th>{{costCours}}</th>
                    </tr>
                </tfoot>
            </table>

            <!-- Botón para pagar con tarjeta -->
            <div class="d-flex justify-content-end">
                <button type="button" id="abrirModalBtn" class="btn btn-primary">
                    Pagar con Tarjeta
                </button>
            </div>
        </div>
    </div>

    <!-- Modal personalizado -->
    <div id="pagoModal" class="modal-custom">
        <div class="modal-content-custom">
            <div class="modal-header-custom">
                <span class="modal-title">Pago con Tarjeta</span>
                <span id="cerrarModalBtn" class="close-btn">&times;</span>
            </div>
            <div class="modal-body">
                <form action="/reservar" method="POST">
                    <div class="mb-3">
                        <label for="numero_tarjeta" class="form-label">Número de Tarjeta:</label>
                        <input type="text" id="numero_tarjeta" name="numero_tarjeta" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="cvv" class="form-label">Código CVV:</label>
                        <input type="text" id="cvv" name="cvv" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="fecha_vencimiento" class="form-label">Fecha de Vencimiento (MM/YY):</label>
                        <input type="text" id="fecha_vencimiento" name="fecha_vencimiento" class="form-control"
                            placeholder="MM/YY" required>
                    </div>

                    <input type="hidden" id="precio" name="precio" value="99.99">

                    <button type="submit" class="btn btn-success w-100">Confirmar Pago</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Script para abrir y cerrar la modal -->
    <script>
        // Obtener referencias a los elementos
        var abrirModalBtn = document.getElementById('abrirModalBtn');
        var cerrarModalBtn = document.getElementById('cerrarModalBtn');
        var modal = document.getElementById('pagoModal');

        // Función para abrir el modal
        abrirModalBtn.onclick = function () {
            modal.style.display = "flex";
        }

        // Función para cerrar el modal
        cerrarModalBtn.onclick = function () {
            modal.style.display = "none";
        }

        // Cerrar el modal si el usuario hace clic fuera del contenido
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
</body>

</html>